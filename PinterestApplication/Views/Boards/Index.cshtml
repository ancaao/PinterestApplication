﻿
<br />
<br />


<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />


<a class="btn btn-success rounded-pill mb-5" href="/Boards/New">
    <i class="bi bi-plus"></i> Add board
</a>




<div class="row">
    @foreach (var board in ViewBag.Board)
    {
        <div class="col-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" name="Name">@board.Name</h5>

                    @if (ViewBag.IsAdmin)
                    {
                        <div><i class="bi bi-person"> Created by: </i> @board.User.UserName</div>
                    }

                    <br />

                    <a class="btn btn-success" href="/Boards/Show/@board.Id">Show board</a>

                    <br />
                    <br />
                    @if (board.UserId == ViewBag.CurrentUser|| ViewBag.IsAdmin)
                    {
                        <form method="post" action="/Boards/Delete/@board.Id">
                            <button class="btn btn-danger" type="submit">Delete board</button>
                        </form>
                        <br />
                    }
                </div>
            </div>
        </div>
    }
</div>