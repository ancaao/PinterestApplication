@model PinterestApplication.Models.Board

<br />

<h2 class= "mb-5 text-center">Add board</h2>

<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Boards", method: FormMethod.Post))
{

    @Html.Label("Name", "Board name")
    <br />

    @Html.TextBox("Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        <br />
        <br />

     <button class="btn btn-success" type="submit">Add board</button>

}