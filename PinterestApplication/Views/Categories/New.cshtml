@model PinterestApplication.Models.Category

@{
    ViewBag.Title = "Add category";
}

<style>
    .btn-success {
        background-color: #ED3B9D;
        border-color: #ED3B9D;
        color: white;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #BD0071;
            border-color: #BD0071;
        }
</style>

<h2> Add category </h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories", method: FormMethod.Post))
{

    @Html.Label("Name", "Category name")
    <br />

    @Html.TextBox("Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    <br />

    <br />

    <button class="btn btn-success" type="submit">Add category</button>

}

