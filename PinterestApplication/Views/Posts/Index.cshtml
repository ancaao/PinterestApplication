@{
    ViewBag.Title = "Feed";
}

<style>
    body {
        background-color: #efefef; /* Culoare fundal similară cu Pinterest */
    }

    h2 {
        color: #bd081c; /* Culoare roșie pentru titluri similară cu Pinterest */
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 5px;
    }

    .card {
        background-color: white; /* Fundal alb pentru cărți */
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02); /* Efect la hover pentru cărți */
        }

    .card-body {
        padding: 0; /* Elimină paddingul implicit pentru un control mai bun */
    }

    .bi {
        color: #bd081c; /* Culoare roșie pentru icon */
    }

    .btn-success:hover {
        background-color: #8c0615; /* Nuanță mai închisă pentru efectul la hover */
        border-color: #8c0615;
    }

    .card-content {
        border-radius: 10px; /* Colțuri rotunjite pentru conținut */
        overflow: hidden; /* Ascunde overflow-ul pentru a asigura că marginile sunt rotunjite */
    }

    .card-img {
        width: 100%; /* Asigură că imaginea ocupă întreaga lățime a cărții */
        height: 10%; /* Înălțime controlată pentru imagine */
    }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .title-column {
        flex-grow: 1;
    }

    .like-column, .nrlike-column {
        flex-shrink: 0;
        margin-left: 10px;
    }

    .card-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .btn-like {
        background-color: #8B0000;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
        padding: 5px 10px;
    }

    .like-count {
        color: #bd081c;
        padding-left: 10px;
    }

    .categ {
        color: #bd081c;
        padding: 10px;
    }

</style>

<br />
<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Cauta Bookmarks dupa Titlu, Categorie sau Comentarii" name="search" value="@ViewBag.SearchString">
        <button class="btn btn btn-success"
                type="submit">
            Search
        </button>
    </div>
</form>
<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<div class="text-center">
    <a class="btn btn-outline-success" href="/Posts/New">Add new post</a>

    <div class="row">
        @foreach (PinterestApplication.Models.Post post in ViewBag.Posts)
        {
            <div class="col-3 mb-4">
                <div class="card" style="width:100%">
                    <div class="card-container">
@*                         <div class="image-container">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(post.Image)" alt="Post Image" class="card-img-top" style="max-width: 100%; height: auto;" />
                        </div> *@
                        <div class="card-body">
                            @Html.Partial("PostInfo", post)
                            <div class="card-footer">
                                <form method="post" asp-action="AddLike" asp-route-id="@post.Id" class="like-form">
                                    <button type="submit" class="btn-like">
                                        <i class="bi bi-heart" style="color:white"></i>
                                    </button>
                                    <span class="like-count">
                                        @if (post.Likes != null)
                                        {
                                            @post.Likes.Count()
                                        }
                                        else
                                        {
                                            <p>0</p>
                                        }
                                    </span>
                                </form>

                                <a href="@post.Url" target="_blank" class="btn btn-primary">View Source</a>
                                <div class="categ">
                                    <i class="bi bi-globe"></i> @post.Category.Name
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
