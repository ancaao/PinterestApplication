@{
    ViewBag.Title = "Feed";
}

<style>
    body {
        background-color: #efefef; /* Background color similar to Pinterest */
    }

    h2 {
        color: #BD0071; /* Red color for titles similar to Pinterest */
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 5px;
    }

    .card {
        background-color: white; /* White background for cards */
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02); /* Hover effect for cards */
        }

    .card-body {
        padding: 0; /* Remove default padding for better control */
    }

    .bi {
        color: #BD0071; /* Red color for icons */
    }

    .btn-success:hover {
        background-color: #BD0071; /* Darker shade for hover effect */
        border-color: #BD0071;
    }

    .card-content {
        border-radius: 10px; /* Rounded corners for content */
        overflow: hidden; /* Hide overflow to ensure rounded edges */
    }

    .card-img {
        width: 100%; /* Ensure the image takes the full width of the card */
        height: 10%; /* Controlled height for the image */
    }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .title-column {
        flex-grow: 1;
    }

    .like-column, .nrlike-column {
        flex-shrink: 0;
        margin-left: 10px;
    }

    .card-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .btn-like {
        background-color: #ED3B9D;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
        padding: 5px 10px;
    }

    .like-count {
        color: #ED3B9D;
        padding-left: 10px;
    }

    .categ {
        color: #ED3B9D;
        padding: 10px;
    }

    .search-sort-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .search-input {
        flex: 1;
        margin-right: 10px;
    }

    .sort-select {
        flex: 0 0 auto;
        margin-left: 10px;
    }

    .search-button {
        background-color: #BD0071;
        color: white;
    }

        .search-button:hover {
            background-color: #ED3B9D;
            border-color: #ED3B9D;
        }
</style>

<div class="search-sort-container">
    <form method="GET" class="d-flex align-items-center w-100">
        <div class="input-group search-input">
            <input type="text" class="form-control" placeholder="Search Bookmarks by Title, Category or Comments" name="search" value="@ViewBag.SearchString">
            <button class="btn search-button" type="submit">
                Search
            </button>
        </div>
        <div class="sort-select">
            <select class="form-select" aria-label="Sort posts" name="sortOrder">
                <option value="">Sort by:</option>
                <option value="likesAsc">Least liked</option>
                <option value="likesDesc">Most liked</option>
            </select>
        </div>
    </form>
</div>

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<div class="text-center mb-4">
    <a class="btn btn-outline-success" href="/Posts/New">Add new post</a>
</div>

<div class="row">
    @foreach (PinterestApplication.Models.Post post in ViewBag.Posts)
    {
        <div class="col-3 mb-4">
            <div class="card" style="width:100%">
                <div class="card-container">
                    @* <div class="image-container">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(post.Image)" alt="Post Image" class="card-img-top" style="max-width: 100%; height: auto;" />
                </div> *@
                    <div class="card-body">
                        @Html.Partial("PostInfo", post)
                        <div class="card-footer">
                            <form method="post" asp-action="AddLike" asp-route-id="@post.Id" class="like-form">
                                <button type="submit" class="btn-like">
                                    <i class="bi bi-heart" style="color:white"></i>
                                </button>
                                <span class="like-count">
                                    @if (post.Likes != null)
                                    {
                                        @post.Likes.Count()
                                    }
                                    else
                                    {
                                        <p>0</p>
                                    }
                                </span>
                            </form>

                            <a href="@post.Url" target="_blank" class="btn btn-primary">View Source</a>
                            <div class="categ">
                                <i class="bi bi-globe"></i> @post.Category.Name
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="/Posts/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="/Posts/Index?page=@i">@(i)</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" href="/Posts/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
