@model PinterestApplication.Models.Post

<style>
    body {
        background-color: #efefef; 
    }

    h2 {
        color: #BD0071;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 5px;
    }

    .card {
        background-color: white;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02); 
        }

    .card-body {
        padding: 0;
    }

    .bi {
        color: #ED3B9D;
    }

    .btn-success:hover {
        background-color: #BD0071;
        border-color: #BD0071;
    }

    .card-content {
        border-radius: 10px; 
        overflow: hidden; 
    }

    .card-img {
        width: 100%; 
    }

    .card-body {
        flex-direction: column;
        padding: 10px;
    }

    .title-column {
        flex-grow: 8;
        margin-left: 10px;
    }

    .like-column {
        flex-shrink: 0;
        margin-left: 8px;
        margin-right: 0; 
    }

    .nrlike-column {
        margin-left: 0;
        flex-shrink: 0;
        margin-right: 0; 
    }

    .card-container {
        display: flex;
        align-items: center; 
    }

    .card-title {
        color: white;
        text-decoration: none;
        background-color: #ED3B9D;
        padding: 10px;
        border-radius: 10px;
        margin-right: 10px;
    }

    .btn-like {
        background-color: #BD0071;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .like-count {
        color: #ED3B9D;
        margin: 0;
    }

</style>




<div class="card-content">
    <a href="/Posts/Show/@Model.Id" class="card-link">@Html.Raw(Model.Description)</a>
    <div class="row">
        <div class="col title-column">
           
            <h5 class="card-title">@Model.Title</h5>
        </div>
        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <div class="row">
                <div class="col image-column">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Post Photo" class="post-photo" ; style="max-width: 100%; height: auto;"   />
       
                </div>
            </div>
        }


    </div>
</div>