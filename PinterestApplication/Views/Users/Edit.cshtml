@model PinterestApplication.Models.ApplicationUser

<style>
    body {
        background-color: #FFCCE1;
    }

    .custom-button {
        background-color: #BD0071;
        border-color: #BD0071;
        color: white;
    }

        .custom-button:hover {
            background-color: #ED3B9D;
            border-color: #ED3B9D;
        }

    .form-group label {
        color: #BD0071;
        font-weight: bold;
    }

    .form-group input, .form-group select {
        border-color: #BD0071;
    }

    .bi {
        color: #BD0071;
    }

    .card {
        background-color: white;
        border: 1px solid #BD0071;
        border-radius: 5px;
        padding: 20px;
        margin: 20px;
    }

    .text-center {
        text-align: center;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-between {
        justify-content: space-between;
    }
</style>

<div class="card">
    @using (Html.BeginForm(actionName: "Edit", controllerName: "Users",
    method: FormMethod.Post, routeValues: new { id = @Model.Id }))
    {
        <div class="form-group">
            <i class="bi bi-person"></i>
            @Html.Label("UserName", "Username", new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <i class="bi bi-envelope"></i>
            @Html.Label("Email", "User email", new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>

@*         <div class="form-group">
            <i class="bi bi-phone"></i>
            @Html.Label("PhoneNumber", "Phone number", new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div> *@

        <div class="form-group">
            <i class="bi bi-person"></i>
            @Html.Label("FirstName", "User first name", new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <i class="bi bi-person"></i>
            @Html.Label("LastName", "User last name", new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                <i class="bi bi-card-list"></i>
                <label>Select role</label>
                @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", ViewBag.UserRole), null, new { @class = "form-control" })
            </div>
        }

@*         <div class="text-center form-group">
            <button type="submit" class="btn btn-primary custom-button">Save Changes</button>
        </div> *@
        <div class="d-flex justify-content-between p-3">
            <button type="submit" class="btn btn-primary custom-button">Save changes</button>
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
            {
                <button class="btn btn-danger custom-button" type="submit">Delete user</button>
            }
        </div>
    
    }


</div>
