@model PinterestApplication.Models.ApplicationUser
@using Microsoft.AspNetCore.Identity
<script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>

<style>
    body {
        background-color:white ;
    }

    h2 {
        color: #BD0071;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: #FFCCE1;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02); /* Hover effect for cards */
        }

    .card-body {
        padding: 20px;
    }

    .bi {
        color: #BD0071;
    }

    .btn-success {
        background-color: #ED3B9D;
        border-color: #ED3B9D;
        color: white;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #BD0071;
            border-color: #BD0071;
        }
</style>

<h2>My profile</h2>

<div class="row">
    <div class="col-3 mb-4">
        <div class="card">
            <div class="card-body d-flex justify-content-between flex-column">
                <div>
                    <p><i class="bi bi-person"></i> UserName: @Model.UserName</p>
                </div>

                @inject SignInManager<ApplicationUser> SignInManager
                @if (SignInManager.IsSignedIn(User) && Model.Id == SignInManager.UserManager.GetUserId(User))
                {
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            <a class="btn btn-sm btn-success" asp-area="" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Edit profile</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    @inject SignInManager<ApplicationUser> SignInManager

    @if (SignInManager.IsSignedIn(User) && Model.Id == SignInManager.UserManager.GetUserId(User))
    {
@*         <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            <a class="btn btn-sm btn-success" href="/Posts/New"> Add post</a>
                        </div>
                    </div>
                </div>
            </div>
        </div> *@

        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
@*                             <a class="btn btn-sm btn-success" href="/Boards/Index">Show all boards</a> *@
                            <p><i class="bi bi-bookmark"></i> Your boards</p>
                            @if (Model.Boards != null && Model.Boards.Any())
                            {
                                foreach (var board in Model.Boards)
                                {
                                    <p>
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Show", "Boards", new { id = board.Id })">@board.Name</a>
                                    </p>
                                }
                            }

                            else
                            {
                                <p>(You do not have boards)</p>
                            } 
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            @*                             <a class="btn btn-sm btn-success" href="/Boards/Index">Show all boards</a> *@
                            <p>Your badges</p>
                            @if (Model.Badges != null && Model.Badges.Any())
                            {
                                foreach (var badge in Model.Badges)
                                {
                                    <p>
                                        <img src="~/images/@badge.ImagePath" alt=@badge.Name style="width: 50px; height: 50px;" />
                                        @badge.Description
                                    </p>
                                }
                            }

                            else
                            {
                                <p>(You do not have badges)</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<div class="row mt-4">
    <div class="col-12">
        <h3>User's posts</h3>
        <div class="row">
            @if (Model.Posts != null && Model.Posts.Any())
            {
                foreach (var post in Model.Posts)
                {
                    <div class="col-3 mb-4">
                        <div class="card" style="width: 100%">

                            @Html.Partial("PostInfo", post)
                        </div>
                    </div>
                }
            }
            else
            {
                <p>(The user doesn't have posts)</p>
            }
        </div>
    </div>
</div>





<script>
    document.addEventListener('DOMContentLoaded', function () {
        var grid = document.querySelector('.grid');
        var masonry = new Masonry(grid, {
            itemSelector: '.card',
            columnWidth: '.card',
            gutter: 20
        });
    });
</script>